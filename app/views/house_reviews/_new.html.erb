


<% if @current_user.id == @house.seller.id%>

<% else%>

<h3>Submit a Review!</h3>
  <%= form_for ([@house, @house_review]) do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>

    <br>
    <%= f.label "Your Review" %><br>
    <%= f.text_area :content %>
      <br>
    <%= f.submit "Submit Review!", class: "btn btn-primary btn-sm"%>
  <% end %>
<% end %>
<br>
<% if flash[:review_errors] %>
    <% flash[:review_errors].each do |error| %>
        <div class="container">
        <div class="alert alert-danger" role="alert"><%= error %></div>
        </div>
        <% end %>
<% end %>
