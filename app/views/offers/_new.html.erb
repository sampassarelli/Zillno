<% if flash[:offer_errors] %>
    <% flash[:offer_errors].each do |error| %>
        <div style="color: red"><%= error %></div>
        <% end %>
<% end %>

<% if @current_user.id == @house.seller.id%>

<% else%>
        <h4>Submit an Offer:</h4>
        <%= form_for ([@house, @offer]) do |f| %>
                <%= f.label "Offer Amount:" %>
                <%= f.number_field :amount%>
                <%= f.label :agent_id %>
                <%= f.collection_select :agent_id, Agent.all, :id, :full_name, prompt: true %>
                
                <%= f.submit %>
        <% end %>
<% end %>