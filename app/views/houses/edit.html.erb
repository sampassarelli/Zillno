    <body>
        
        <img class="mb-4" src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/23/Eo_circle_blue_white_letter-z.svg/1024px-Eo_circle_blue_white_letter-z.svg.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Update Your Listing!</h1>
        <%= form_for (@house) do |f| %>
            <p><%= f.text_field :address, placeholder: "Name"  %></p>

            <p><%= f.number_field :price, placeholder: "Price"  %></p>

            <p><%= f.number_field :bedrooms, placeholder: "Bedrooms"  %></p>

            <p><%= f.number_field :bathrooms, :step => "0.25", placeholder: "Bathroom"  %></p>

            <p><%= f.text_area :description, placeholder: "Description"  %></p>

            <p><%= f.text_area :picture, placeholder: "Picture URL"  %></p>

             <p><%= f.collection_select :agent_id, Agent.all, :id, :full_name, prompt: true%></p>

            <%= f.submit "Update Listing!", class: "btn btn-primary" %>

            

             
         
        <% end %>
    <br>
