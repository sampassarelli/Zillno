            <div  style="text-align: center">
                <% if flash[:house_errors] %>
                <% flash[:house_errors].each do |error| %>
                <div class="container">
                <div class="alert alert-danger" role="alert"><%= error %></div>
                </div>
                <% end %>
                <% end %>
            </div>
        </div>
