<body>
<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
        <div style="color: red"><%= error %></div>
        <% end %>
<% end %>

<%= form_for(@user) do |f| %>
    <div  style="text-align: center">
    <%= f.label :user_name %>
    <%= f.text_field :user_name %><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br>
    
    <%= f.label :email %>
    <%= f.email_field :email %><br>

    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :bio %>
    <%= f.text_field :bio %><br>

    <%= f.label :age %>
    <%= f.number_field :age %><br>

    <%= f.label :hometown %>
    <%= f.text_field :hometown %><br>

    <%= f.label "Profile Picture URL" %>
    <%= f.text_field :pic %><br>
    
    <%= f.submit %>
    </div>
<% end %>
</body>